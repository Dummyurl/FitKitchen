<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/meal_item_card"
        app:cardCornerRadius="4dp"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/myorder_container">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/iv_myorder_image"
            android:text="My orders"
            android:layout_gravity="left"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/iv_myorder_image"
                android:layout_margin="@dimen/simple_margin">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/tv_myorder_title"
              android:text="Title"
              android:textSize="@dimen/small_text_size"
              android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_myorder_amt"
                android:text="Amount"
                android:textSize="@dimen/small_text_size"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/red"
                android:layout_alignParentBottom="true"/>

            </RelativeLayout>


        </RelativeLayout>
        </android.support.v7.widget.CardView>

</RelativeLayout>